<!DOCTYPE html>
<html>
  <head>
    <title>Finance Forecast</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <a href="#">
        <div class="logo">
          <%= image_tag("green-trans.png", class: "logo-img") %>
        </div>
      </a>
        <nav>
          <%= link_to image_tag("new-user-icon.png", class: "user-icon"), "#" %>
          <%= link_to image_tag("contact-icon.png", class: "contact-icon"), "#" %>
          <div class="dropdown">
            <a href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%=image_tag("new-menu-icon.png", class: "menu-icon") %>
            </a>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <a class="dropdown-item" href="#">Assets</a>
              <a class="dropdown-item" href="#">Debts</a>
              <a class="dropdown-item" href="#">Incomes</a>
              <a class="dropdown-item" href="#">Expenses</a>
              <a class="dropdown-item" href="#">Transfers</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Account</a>
              <a class="dropdown-item" href="#">Log Out</a>
            </div>
          </div>
         
        </nav>
      <!-- </a> -->
    </header>

    <% flash.each do |message_type, message_array| %>
      <!-- <div class="alert alert-<%= message_type %>">
        <%# message %> 
      </div> -->
      <p><%= message_type.capitalize %>: </p>
      <ul>
        <% message_array.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <% flash.clear %>
    <%= yield %>
    <br>
    <br>
    <footer>
      <% if logged_in? %>
        <%= link_to "Home", root_path %> | <%= link_to "Log Out", logout_path, method: :delete %>
      <% end %>
    </footer>
  </body>
</html>

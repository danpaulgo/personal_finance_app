<%= render partial: 'forms/form_header', locals: {form_title: "Login", corner_link_path: "/users/new", corner_link_text: "Sign Up"} %>
  <%= form_for(:session, url: login_path, html: {class: "form-horizontal", role: "form", id: "loginform"}) do |f|%>

    <p class="form-category">Sign In</p>

    <%= render partial: "forms/form_section", locals: {col: true, form_object: f, label_for: :email, label_name: "Email", form_method: form_email(f)} %>

    <%= render partial: "forms/form_section", locals: {col: true, form_object: f, label_for: :password, label_name: "Password", form_method: form_password(f)} %>

    <%# render partial: "forms/form_section", locals: {col: true, form_object: f, label_for: :password, label_name: "Remember Me", form_method: f.check_box(:remember_me)} %>    

    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <div id="remember-me-text">Remember Me</div>
    <% end %>

    <div id="forgot-password"><%= link_to "Forgot Password", new_password_reset_path %></div>

    <div class="form-group">
      
    </div>

    <%= render partial: "forms/form_submit", locals: {button_text: "Login"}  %>

  <% end %>
<%= render partial: 'forms/form_footer', locals: {remove_bottom_link: true} %>
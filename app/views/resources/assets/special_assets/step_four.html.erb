<%= render 'resources/assets/form_header' %>
<%= render partial: 'forms/form_header', locals: {form_title: "New Asset"} %>
<%= form_for @special_asset, url: process_step_four_path do |f| %>

  <div class="form-group">
    <% if @type_category == "Vehicle" %>
      <label class="col-md-3 control-label">Would you like to take into account that vehicles depreciate in value at an average rate of 15% anually?</label>
    <% elsif @type_category == "Property" %>
      <% if !(@rate == nil) %>
        <label class="col-md-3 control-label">Would you like to take into account that real estate in <%= @state %> appreciates at a historical average of <%= @rate %>% anually?</label>
      <% else %>
        <label class="col-md-3 control-label">Would you like to take into account that real estate appreciates at an average rate of 5.4% anually?</label>
      <% end %>
    <% end %>
    <div class="col-md-9">
      <table>
        <tr>
          <td><label value="yes" for="average_rate_yes">Yes</label></td>
          <td><input type="radio" name="average_rate" id="average_rate_yes" value="yes"></td>
        </tr>
        <tr>
          <td><label value="no" for="average_rate_no">No</label></td>
          <td><input type="radio" name="average_rate" id="average_rate_no" value="no"></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-3 control-label">Or, enter custom rate of <%= @type_category == "Vehicle" ? "depreciation" : "appreciation" %></label>
    <div class="col-md-9">
      <%= f.number_field :interest, value: nil, placeholder: "Custom Rate (%)", step: :any %>
    </div>
  </div>
  
  <%= render partial: "shared/form_submit", locals: {button_text: "Next"} %>

<% end %>

<%= render 'forms/form_footer' %>
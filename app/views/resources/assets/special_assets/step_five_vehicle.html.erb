<%= render 'resources/assets/form_header' %>
<%= form_tag process_step_five_path do %>
  <b>Related Expenses</b>
  <br>
  <br>
  <%= fields_for :gasoline, @gasoline do |g| %>
    <%= g.label :amount, "How much do you typically spend on gas for this vehicle in a week?" %>
    <br>
    <%= form_amount(g) %>
    <%= g.label :associated_asset_id, "paid using: " %>
    <%= form_select_primary_asset(g, @user) %>
  <% end %>
  <br>
  <br> 
  <%= fields_for :insurance, @car_insurance do |i| %>
    <%= i.label :amount, "How much do you pay for car insurance on this vehicle anually?" %>
    <br>
    <%= form_amount(i) %>
    <%= i.label :associated_asset_id, "paid using: " %>
    <%= form_select_primary_asset(i, @user) %>
  <% end %>
  <br>
  <br> 
  <%= fields_for :vehicle_maintenance, @vehicle_maintenance do |m| %>
    <%= m.label :amount, "How much do you typically spend on maintenance and repairs for this vehicle in a year?" %>
    <br>
    <%= form_amount(m) %>
    <%= m.label :associated_asset_id, "paid using: " %>
    <%= form_select_primary_asset(m, @user) %>
  <% end %>
  <br>
  <br> 
  <%= fields_for :miscellaneous, @miscellaneous do |mi| %>
    <%= mi.label :amount, "How much do you typically spend on miscellaneous expenses for this vehicle in a year?" %>
    <br>
    <%= form_amount(mi) %>
    <%= mi.label :associated_asset_id, "paid using: " %>
    <%= form_select_primary_asset(mi, @user) %>
  <% end %>
  <br>
  <br>
  <%= submit_tag "Submit" %>
  
<% end %>
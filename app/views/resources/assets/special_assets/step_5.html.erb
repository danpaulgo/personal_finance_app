<%= form_for @page_resource, url: process_special_asset_step_5_path do |f| %>

  <%= f.label :amount, "How much revenue does this property generate in a month?", class: "control-label" %>
  <br>
  <%= f.number_field :income[:amount], placeholder: "Amount (USD)", step: '0.01', value: (f.object.amount.blank? ? nil : ('%.2f' % f.object.amount)) %>
  <%= f.label :associated_asset_id, "paid using: " %>
  <%= f.select(:income[:associated_asset_id], options_for_select(@asset_selections, selected: f.object.send(attr_name)), include_blank: "Select Asset") %>

<% end %>


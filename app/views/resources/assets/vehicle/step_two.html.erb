<%= render 'resources/assets/form_header' %>
<%= form_for @loan, url: process_step_two_path do |f| %>
  <b><%= @loan_name.to_title %> Details</b>
  <br>
  <%= f.label :amount, "Amount owed:" %>
  <%= form_amount(f) %>
  <br>
  <%= f.label :interest, "Interest rate:" %>
  <%= form_interest(f) %>
  <br>
  <%= f.label :compound_frequency, "Compound Frequency:" %>
  <%= form_compound_frequency(f) %>
  <br>
  <b><%= @loan_name.to_title %> Payment Details</b>
  <br>
  <%= fields_for :payment, @payment do |p| %>
    <%= p.label :amount, "Payment amount: " %>
    <%= form_amount(p) %>
    <br>
    <%= p.label :frequency, "Payment frequency: " %>
    <%= form_frequency(p) %>
    <br>
      <%= p.label :next_date, "Next payment date: " %>
      <%= form_next_date(p) %>
    <br>
    <%= p.label :liquid_asset_from_id, "Paid using: " %>
    <%= form_select_liquid_asset(p, current_user) %>
  <% end %>
  <br>
  <%= f.submit "Next" %>
  
<% end %>
<p><i>* If you do not have all necessary information, you may <%= link_to "enter your #{@loan_name} payments as an expense", step_three_path %> instead or <%= link_to "skip", step_four_path %> this step altogether</i></p>
